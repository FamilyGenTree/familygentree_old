{% extends 'WebtreesLegacyThemeBundle:Default:base.html.twig' %}
{% block head_inline_css %}
    <style type="text/css">
        body {
            color: gray;
            background-color: white;
            font: 14px tahoma, arial, helvetica, sans-serif;
            padding: 10px;
        }

        a {
            color: #81A9CB;
            font-weight: bold;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        h1 {
            color: #81A9CB;
            font-weight: normal;
            text-align: center;
        }

        li {
            line-height: 2;
        }

        blockquote {
            color: red;
        }

        .content {
            /*margin:auto; width:800px;*/
            border: 1px solid gray;
            padding: 15px;
            border-radius: 15px;
        }

        .good {
            color: green;
        }
    </style>
{% endblock %}

{% block page_content %}
    <div class="content"><p>
            {% if offline_txt %}
                {{ offline_txt }}
            {% else %}
                This website is down for maintenance.  You should <a href="{{ url('_welcome') }}">try
                again</a> in a few minutes.
            {% endif %}
        </p>
    </div>
{% endblock %}
